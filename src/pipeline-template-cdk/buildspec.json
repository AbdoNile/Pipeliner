{
    "version": "0.2",
    "phases": {
      "install": {
        "runtime-versions": {
          "nodejs": 10
        }
      },
      "pre_build": {
        "commands": ["cd src/pipeline-template-cdk", "npm install" ]
      },
      "build": {
        "commands": [
          "npm install --force -g aws-cdk",
          "npm run build",
          "npm run cdk-confirmed"
        ]
      }
    },
    "cache": {
      "paths": ["node_modules/**/*"]
  }
}
